{% extends "::base.html.twig" %}
{% set title='Docu' %}
{% set titre='Docu' %}
{% set soustitre='liste des docu' %}


 {% block body %}
     <BR><BR>

     <table class="table table-condensed table-hover ">
         <thead>
         <tr>
             <th>&nbsp;</th>
             <th>&nbsp;</th>
             <th>Editer</th>
             <th>Détails</th>
             <th>Supprimer</th>
         </tr>
         {% for doc in listeDocu %}
             <tr>
                 <td>
                     <strong>{{ doc.titre }}</strong>&nbsp;
                 </td>
                 <td>
                     {{ doc.contenu|slice(0,115) }}...
                 </td>
                 <td>
                     <a href="/edit/docu/{{ doc.id }}">
                         <span title="Editer" class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                     </a>
                 </td>
                 <td>
                     <a href="/detail/docu/{{ doc.id }}">
                         <span title="Détails" class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                     </a>
                 </td>
                 <td>
                     <a href="/delete/docu/{{ doc.id }}">
                         <span title="Supprimer" class=" glyphicon glyphicon-remove" aria-hidden="true"></span>
                     </a>
                 </td>

             </tr>

         {% endfor %}
     </table>


         <p>
             <a href="/new/docu">Nouveau</a>
         </p>

 {% endblock %}