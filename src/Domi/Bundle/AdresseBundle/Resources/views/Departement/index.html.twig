{% extends '::base.html.twig' %}
{% set title='Département' %}
{% set titre='Département' %}
{% set soustitre='Liste Département' %}

{% set directionParam = entities.getPaginatorOption('sortDirectionParameterName') %}
{% set params = entities.getParams() %}
{% set direction = params[directionParam] is defined ? params[directionParam] : null %}

{% block body -%}
    <h1>Departement list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Nom</th>
                <th>Nomuppercase</th>
                <th>Slug</th>
                <th>Nomsoundex</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('departement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.nomUppercase }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.nomSoundex }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('departement_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('departement_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>
    {# total items count #}
    <div class="count">
        Nbre total : {{ entities.getTotalItemCount }}.
    </div>

    <ul>
        <li>
            <a href="{{ path('departement_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
